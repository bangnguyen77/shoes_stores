      <h3>Remove a Brand</h3>
      <form id="remove_Brands" action="/stores/<%= @store.id() %>" method="post">
        <input name="_method" type="hidden" value="patch">
        <input type="hidden" name="form_id" value="remove_brands">
        <% if @store.brands().any?() %>
          <% @store.brands().each() do |brand| %>
            <div class="checkbox">
